<div id="like-link-<%= post.id %>">
  <% if current_user.likes.find_by(post_id: post.id) %>
    <%= link_to "♥", unlike_path(post), method: :delete, class: "like", remote: true %>
  <% else %>
    <%= link_to "♡", like_path(post), method: :post, class: "unlike", remote: true %>
  <% end %>
  <%= post.likes_count %>
</div>